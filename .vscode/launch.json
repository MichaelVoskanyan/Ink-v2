// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Windows)",
            "type": "cppvsdbg", // ← use the VS debugger on Windows
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/Ink.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cmake-build"
        },
        {
            "name": "Debug LLVM (Windows)",
            "type": "cppvsdbg", // ← also VS debugger (works for clang targets)
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/Ink.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cmake-build"
        },
        {
            "name": "Debug (Linux)",
            "type": "cppdbg", // keeps your existing Linux setup
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/Ink",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "cmake-build"
        }
    ]
}